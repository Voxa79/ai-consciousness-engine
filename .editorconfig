# EditorConfig aide à maintenir des styles cohérents entre éditeurs/IDE
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml,toml,json,jsonc}]
indent_size = 2

[*.{js,jsx,ts,tsx,mjs,cjs}]
indent_size = 2

[*.{py,rs,go}]
indent_size = 2

[*.{cs,java}]
indent_size = 4
